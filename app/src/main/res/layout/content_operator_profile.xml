<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_operator_profile"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_operatorProfile_profile"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0.0dp"
                    tools:ignore="VectorDrawableCompat"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_operatorProfile_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_operatorProfile_profile"
                    android:layout_alignEnd="@+id/iv_operatorProfile_profile"
                    android:layout_alignRight="@+id/iv_operatorProfile_profile"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_add_a_photo_black_24px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/fab_operatorProfile_pic"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView40"
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.60"
                            android:padding="5dp"
                            app:srcCompat="@drawable/ic_email_black_24dp" />

                        <TextView
                            android:id="@+id/tv_operatorProfile_email"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.01"
                            android:gravity="center_vertical|center"
                            android:text="TextView"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/imgbtn_operator_email"
                            android:layout_width="wrap_content"
                            android:layout_height="39dp"
                            android:layout_weight="0.35"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/ic_edit_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView41"
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.86"
                            android:padding="5dp"
                            app:srcCompat="@drawable/ic_perm_identity_black_24dp" />

                        <TextView
                            android:id="@+id/tv_operatorProfile_username"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.89"
                            android:gravity="center_vertical|center"
                            android:text="TextView"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/imgbtn_operator_name"
                            android:layout_width="wrap_content"
                            android:layout_height="39dp"
                            android:layout_weight="0.48"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/ic_edit_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView43"
                            android:layout_width="41dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            app:srcCompat="@drawable/ic_contact_phone_black_24dp" />

                        <TextView
                            android:id="@+id/tv_operatorProfile_number"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.04"
                            android:gravity="center_vertical|center"
                            android:text="TextView"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/imgbtn_operator_number"
                            android:layout_width="wrap_content"
                            android:layout_height="39dp"
                            android:layout_weight="0.16"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/ic_edit_black_24dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_operator_pass"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/highlight"
                        android:drawableLeft="@drawable/ic_lock_black_24dp"
                        android:text="Change password" />

                    <Button
                        android:id="@+id/btn_delete"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/highlight"
                        android:drawableLeft="@drawable/com_facebook_close"
                        android:text="Delete Account" />
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>