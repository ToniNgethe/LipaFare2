<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.toni.lipafare.Operator.OperatorIntroActivity">

    <RelativeLayout
        android:layout_width="344dp"
        android:layout_height="551dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_operatorintro"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:adjustViewBounds="false"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/profile2"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0.0dp" />

            <TextView
                android:id="@+id/tv_operatorintro_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="5dp"
                android:text="Username"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_operatorintro_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Email"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="16dp"
            android:text="No operating Sacco found registered to your account. Press + below to get started"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingbtn_operatorintro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:clickable="true"
            app:fabSize="normal"
            app:srcCompat="@mipmap/ic_add_white_24dp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
